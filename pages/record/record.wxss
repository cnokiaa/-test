}
nav {
	position: fixed;
	left: 0;
	/*top: 2.2rem;*/
	top: 0;
	width: 100%;
	height: 2rem;
	background-color: #fff;
	/*margin-bottom: 0.47rem;*/
	border-bottom: 1px solid #dbdbe2;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	-ms-box-sizing: border-box;
	-o-box-sizing: border-box;
	box-sizing: border-box;
	z-index:99;
}
nav span {
	float: left;
	width: 25%;
	height: 100%;
	color: #3c3c3c;
	font: normal 0.75rem/2rem "Microsoft YaHei";
	text-align: center;
}
.chosed {
	position: relative;
	color: #007aff;
}
.chosed:after {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	width: 50%;
	height: 1px;
	margin: 0 auto;
	content: "\200B";
	background-color: #007aff;
}
