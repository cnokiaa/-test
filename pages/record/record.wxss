}
.wait-add .list-left span,.recordC9 .list-left span {
	height: 0.68rem;
	font: normal 0.5rem/0.68rem 'Microsoft YaHei';
}
.wait-add .list-left b,.recordC9 .list-left b {
	height: 0.9rem;
	font: normal 0.5rem/0.9rem 'Microsoft YaHei';
}